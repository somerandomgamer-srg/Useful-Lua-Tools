task = "workflow.run"
args = "Lua Library"

[[workflows.workflow]]
name = "Lua Library"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lua main.lua"

[workflows.workflow.metadata]
outputType = "console"
